<div class="container my-4">
    <h2 class="text-center mb-4">Welcome to the Tech Blog</h2>

    <!-- Posts List -->
    <div class="row">
        {{#each posts}}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">{{this.title}}</h3>
                    <p class="card-text">{{this.content}}</p>
                    <p class="text-muted">By {{this.user.username}} on {{this.createdAt}}</p>
                    
                    <!-- View Post Button -->
                    <a href="/post/{{this.id}}" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
        {{else}}
        <p class="text-center">No posts available. Be the first to create a post!</p>
        {{/each}}
    </div>
</div>